@model LaTirelire.Models.Comment

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    @Html.HiddenFor(model => model.idProduit)


    @Html.HiddenFor(model => model.idClient)


    @Html.HiddenFor(model => model.visible)


    @Html.HiddenFor(model => model.idModo)


    <div class="form-group">
        @*@Html.LabelFor(model => model.date, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
            @Html.DisplayFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>

    if ((bool)(ViewBag.deja_commande))
    {


        <div class="form-group" style="text-align:center">
            @*@Html.LabelFor(model => model.text, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10" style="height:80%">
                @Html.TextAreaFor(model => model.text, new
           {
               htmlAttributes = new
               { @class = "form-control", cols="80", rows="8", style = "height:800%;", }
           })


                @Html.ValidationMessageFor(model => model.text, "", new { @class = "text-danger" })


                <br />
            </div>
        </div>

        <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Creer" class="btn btn-default" />
                </div>
            </div>
    }
    else
    {
        <div class="form-group" style="text-align:center">
            @*@Html.LabelFor(model => model.text, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <textarea class="col-md-10" style="resize:none" cols="80" rows="6" readonly>
                @Html.DisplayFor(model => model.text, new { htmlAttributes= new {style="color:red" } })
            </textarea>

            @Html.ValidationMessageFor(model => model.text, "", new { @class = "text-danger" })<br />

        </div>

        <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input  value="fermer" class="btn btn-default" data-dismiss="modal"/>
                </div>
            </div>
    }

}

