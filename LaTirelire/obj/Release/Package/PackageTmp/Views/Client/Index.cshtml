@model IEnumerable<LaTirelire.Models.Client>

@{
    ViewBag.Title = "Liste des Clients";
}

<h2>Liste des Clients</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
     
        <th>
            id
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prenom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.actif)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.theme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresse.ville)
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresse.codePostal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prenom)
        </td>
        <td>
            @if (item.actif)
            {
                //Ajout de TrimEnd() pour l'id sinon il y a des "%20" qui trainent ds l'url
                @Html.ActionLink("[x]", "Desactiver", new { id = (item.id).TrimEnd() })
            }
            else
            { @Html.ActionLink("[ ]", "Activer", new { id = (item.id).TrimEnd() }) }

            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.theme)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adresse.ville)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adresse.codePostal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tel)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id= (item.id).TrimEnd() }) |
            @*@Html.ActionLink("Details", "Details", new { id= (item.id).Trim() }) |*@
            @*@Html.ActionLink("Delete", "Delete", new { id= (item.id).TrimEnd() })*@
        </td>
    </tr>
}

</table>
