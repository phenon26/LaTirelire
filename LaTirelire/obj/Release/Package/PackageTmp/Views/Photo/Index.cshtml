@model IEnumerable<LaTirelire.Models.Photo>


@{
    ViewBag.Title = "Index des Photos";
}

<h2>Index des photos (back office)</h2>

<p>
    
       
            @Html.ActionLink("Ajouter Photo", "Add", new { id = ViewBag.idProduit }) 
        
    
</p>

<div>
    @{Html.RenderAction("DetailPartiel", "Produit", new { id = ViewBag.idProduit });}
</div>
<br>


<table class="table">
    <tr>
        <th>
            Nom du produit
        </th>
        <th>
            Nom de fichier photo
        </th>
        <th>
            Photo principale
        </th>
        <th>
        Aperçu
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Produit.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomFichier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isMain)
            </td>
            <td>
                <img style="max-height:24px" src="~/photos/@item.nomFichier" />
            </td>
            <td>
                @Html.ActionLink("IsMain", "IsMain", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Effacer", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
<br />
<p>
    @Html.ActionLink("Retour à la liste des produits", "Index", "Produit")
</p>

