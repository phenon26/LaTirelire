@model IEnumerable<LaTirelire.ViewModels.ProduitPhotosViewModel>

@{
    ViewBag.Title = "Home Page";
}
<style>
    html {
        box-sizing: border-box;
    }

    *, *:before, *:after {
        box-sizing: inherit;
    }

    .thumbPir {
        width: inherit;
        max-width: 100%;
        max-height: 240px;
        resize: both;
    }

    .column {
        float: left;
        width: 25%;
        margin-bottom: 16px;
        padding: 0 8px;
        line-snap: contain;
        line-grid: create;
        line-height: 20px;
    }

    @@media screen and (max-width: 650px) {
        .column {
            width: 100%;
            display: block;
        }
    }


    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        height: 340px;
    }

    .container {
        padding: 1px 16px;
    }

        .container::after, .row::after {
            content: "";
            clear: both;
            display: table;
        }

    .title {
        text-align: center;
        color: grey;
    }

    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .button {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
    }

    .titresGall {
        font-family: 'Café Françoise';
        text-wrap: normal;
        text-overflow: ellipsis;
        resize: both;
        text-size-adjust: 100%;
        margin-top: 5px;
    }

    .prix {
        color: gray;
        font-family: Impact;
        font-size: large;
        font-stretch: expanded;
        width: 100%;
        text-align: center;
        position: absolute;
        bottom: 5px;
    }

    /* Add a hover effect (blue shadow) */
    .thumbPir:hover {
        box-shadow: 0 0 2px 1px rgba(0, 140, 186, 0.5);
    }
</style>
<div class="jumbotron" style="width:100%">
    @*<h1>La Tirelire</h1>
        <p class="lead">Le meilleur endroit sur le web pour acheter une tirelire !</p>*@


    @{

        <div class="row">
            @foreach (var item in Model)
            {

                <div class="column">
                    <div class="card" style="position:relative;">
                        <div class="container">
                            <p class="titresGall">@item.produit.Nom</p>
                            <a href="~/Home/Detail/@item.produit.id">
                                @if (item.photos.Count() != 0)
                                {
                                    if (item.photos.Where(p => p.isMain == true).Count() == 0)
                                    {
                                        <img src="~/photos/@item.photos.First().nomFichier"
                                             class="center thumbPir" alt="nomFichier">
                                    }
                                    else
                                    {
                                        <img src="~/photos/@item.photos.Where(p => p.isMain == true).First().nomFichier"
                                             class="center thumbPir" alt="nomFichier">
                                    }
                                }
                                else
                                {
                                    <img src="~/photos/defaut.jpg "
                                         class="center thumbPir" alt="nomFichier">
                                }
                            </a>

                        </div>
                        <div class="prix"><footer>@(((decimal)item.produit.Prix).ToString("N2")) €</footer></div>
                    </div>

                </div>


            }
        </div>
    }





</div>

